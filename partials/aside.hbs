<aside class="cover" style="background: url({{@blog.cover}}) center/cover no-repeat fixed">
  <div class="cover container">
    <div class="profile">
      {{#if @blog.logo}}
      <a id="avatar-link" title="link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
        <img src="{{@blog.logo}}" alt="{{@blog.title}} avatar" class="profile avatar rounded hvr-buzz-out" />
        <h1 id="profile-title">{{@blog.title}}</h1>
        <h3 id="profile-resume"></h3>
      </a>
      {{/if}}

      <hr class="divider long" />
      <p>{{@blog.description}}</p>
      <hr class="divider short" />
      <div class="navigation">
        <div class="profile contact">
          {{navigation}}
          {{> social}}
          {{> search }}
        </div>
      </div>
      <hr class="divider short" />
      <div id="licensing">
        <a rel="license" href="http://creativecommons.org/licenses/by/4.0/"><img alt="Creative Commons License" style="border-width:0" src="https://i.creativecommons.org/l/by/4.0/88x31.png" /></a><br />
        This work is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by/4.0/">Creative Commons Attribution 4.0 International License</a>.
      </div>
      <div id="copyright">
        Â© Copyright 2017, Mariano Korman.
      </div>
    </div>
  </div>
</aside>
